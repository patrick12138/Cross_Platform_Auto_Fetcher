<Window x:Class="Cross_Platform_Auto_Fetcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cross_Platform_Auto_Fetcher"
        mc:Ignorable="d"
        Title="跨平台音乐榜单抓取工具"
        Height="600" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="150"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <Label Content="选择平台:" VerticalAlignment="Center"/>
            <ComboBox x:Name="PlatformComboBox" Width="120" Margin="5,0" SelectionChanged="PlatformComboBox_SelectionChanged"/>

            <Label Content="选择榜单:" VerticalAlignment="Center" Margin="10,0,0,0"/>
            <ComboBox x:Name="ChartComboBox" Width="150" Margin="5,0"/>

            <Button x:Name="FetchButton" Content="抓取数据" Width="100" Margin="20,0,0,0" Click="FetchButton_Click"/>
            <Button x:Name="ExportAllButton" Content="一键导出所有榜单" Width="140" Margin="10,0,0,0" Click="ExportAllButton_Click"/>
        </StackPanel>

        <DataGrid x:Name="SongsDataGrid" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="排名" Binding="{Binding Rank}" Width="60"/>
                <DataGridTextColumn Header="歌名" Binding="{Binding Title}" Width="*"/>
                <DataGridTextColumn Header="歌手" Binding="{Binding Artist}" Width="200"/>
                <DataGridTextColumn Header="专辑" Binding="{Binding Album}" Width="200"/>
            </DataGrid.Columns>
        </DataGrid>

        <TextBox x:Name="LogTextBox" Grid.Row="2" Margin="0,5,0,0" IsReadOnly="True" VerticalScrollBarVisibility="Auto" FontFamily="Consolas"/>

        <StatusBar Grid.Row="3">
            <StatusBarItem>
                <TextBlock x:Name="StatusTextBlock" Text="准备就绪"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>